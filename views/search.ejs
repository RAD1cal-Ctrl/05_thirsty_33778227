<!doctype html>
<html>
  <head>
    <title>Search Page</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/search">Search</a>
        <a href="/register">Register</a>
        <a href="/survey">Survey</a>
      </nav>
  </header>
    <h1>Search Page</h1>
    <h2>Search for what ever you may need at <%= shopName %> </h2>
    
<div class="search-box">
  <form action="/search_result" method="GET">
    <input id="search_box" type="text" name="search_text" placeholder="Search..." required>
    <input id="cat_box" type="text" name="cat_text" placeholder="Category...">
    <input type="submit" value="OK">
  </form>
</div>
<% if (typeof search !== 'undefined') { %>
  <div class="result-box">
    <p>
      You searched for <strong><%= search.text %></strong>
      <% if (search.category && search.category.trim() !== '') { %>
        in <strong><%= search.category %></strong>.
      <% } else { %>
        in <strong>All categories</strong>.
      <% } %>
    </p>
  </div>
<% } %>


  </body>
</html>
